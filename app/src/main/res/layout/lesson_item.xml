<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:backgroundTint="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:src="@drawable/file_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/lesson_assignment_name"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Lesson name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#9A009688"
        app:layout_constraintBottom_toTopOf="@id/descriptio_lesson"
        app:layout_constraintEnd_toEndOf="@id/lesson_assignment_name"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/lesson_assignment_name"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/descriptio_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson_assignment_name"
        android:text="description"
        android:textSize="20sp"
        android:layout_margin="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/guideline"/>
    <TextView
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>